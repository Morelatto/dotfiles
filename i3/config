# i3 config file [V1]
# http://i3wm.org/docs/userguide.html

font pango:Inconsolata 12

set $mod Mod4

set $vl h
set $vd j
set $vu k
set $vr l

set $ws1 "1: "
set $ws2 "2: "
set $ws3 "3: "
set $ws4 "4: "
set $ws5 "5: "
set $ws6 "6: "
set $ws7 "7: "
set $ws8 "8: "
set $ws9 "9: "
set $ws10 "10: "

set $secondary "HDMI-1"

floating_modifier $mod


# Focus
bindsym         $mod+$vu                        focus up
bindsym         $mod+Up                         focus up
bindsym         $mod+$vd                        focus down
bindsym         $mod+Down                       focus down
bindsym         $mod+$vr                        focus right
bindsym         $mod+Right                      focus right
bindsym         $mod+$vl                        focus left
bindsym         $mod+Left                       focus left
bindsym         $mod+space                      focus mode_toggle
bindsym         $mod+a                          focus parent
bindsym         $mod+Shift+a                    focus child


# Movement
bindsym         $mod+Shift+$vd                  move down
bindsym         $mod+Shift+$vu                  move up
bindsym         $mod+Shift+$vr                  move right
bindsym         $mod+Shift+$vl                  move left
bindsym         $mod+Shift+Left                 move left
bindsym         $mod+Shift+Down                 move down
bindsym         $mod+Shift+Up                   move up
bindsym         $mod+Shift+Right                move right


# Layout
bindsym         $mod+b                          split horizontal
bindsym         $mod+v                          split vertical
bindsym         $mod+f                          fullscreen toggle
bindsym         $mod+s                          layout stacking
bindsym         $mod+w                          layout tabbed
bindsym         $mod+e                          layout toggle split
bindsym         $mod+Shift+space                floating toggle


# Workspaces
bindsym         $mod+1                          workspace $ws1
bindsym         $mod+2                          workspace $ws2
bindsym         $mod+3                          workspace $ws3
bindsym         $mod+4                          workspace $ws4
bindsym         $mod+5                          workspace $ws5
bindsym         $mod+6                          workspace $ws6
bindsym         $mod+7                          workspace $ws7
bindsym         $mod+8                          workspace $ws8
bindsym         $mod+9                          workspace $ws9
bindsym         $mod+0                          workspace $ws10
bindsym         $mod+Shift+1  move container to workspace $ws1; workspace number $ws1
bindsym         $mod+Shift+2  move container to workspace $ws2; workspace number $ws2
bindsym         $mod+Shift+3  move container to workspace $ws3; workspace number $ws3
bindsym         $mod+Shift+4  move container to workspace $ws4; workspace number $ws4
bindsym         $mod+Shift+5  move container to workspace $ws5; workspace number $ws5
bindsym         $mod+Shift+6  move container to workspace $ws6; workspace number $ws6
bindsym         $mod+Shift+7  move container to workspace $ws7; workspace number $ws7
bindsym         $mod+Shift+8  move container to workspace $ws8; workspace number $ws8
bindsym         $mod+Shift+9  move container to workspace $ws9; workspace number $ws9
bindsym         $mod+Shift+0  move container to workspace $ws10; workspace number $ws10
bindsym         $mod+n                          workspace next
bindsym         $mod+p                          workspace prev


# Reload/Exit
bindsym         $mod+Shift+c                    reload
bindsym         $mod+Shift+r                    restart
bindsym         $mod+Shift+e                    exec --no-startup-id i3-msg exit
bindsym         $mod+Shift+q                    kill


# Resize mode
bindsym         $mod+r                          mode "  "

mode "  " {
        bindsym                 $vl             resize shrink width 10 px or 10 ppt
        bindsym                 $vd             resize grow height 10 px or 10 ppt
        bindsym                 $vu             resize shrink height 10 px or 10 ppt
        bindsym                 $vr             resize grow width 10 px or 10 ppt

        bindsym                 Left            resize shrink width 10 px or 10 ppt
        bindsym                 Down            resize grow height 10 px or 10 ppt
        bindsym                 Up              resize shrink height 10 px or 10 ppt
        bindsym                 Right           resize grow width 10 px or 10 ppt

        bindsym                 Return          mode "default"
        bindsym                 Escape          mode "default"
        bindsym                 $mod+r          mode "default"
}


# Colors
set_from_resource               $fg             i3wm.foreground
set_from_resource               $bg             i3wm.background
set_from_resource               $cl0            i3wm.color0
set_from_resource               $cl1            i3wm.color1
set_from_resource               $cl2            i3wm.color2
set_from_resource               $cl3            i3wm.color3
set_from_resource               $cl4            i3wm.color4
set_from_resource               $cl5            i3wm.color5
set_from_resource               $cl6            i3wm.color6
set_from_resource               $cl7            i3wm.color7
set_from_resource               $cl8            i3wm.color8
set_from_resource               $cl9            i3wm.color9
set_from_resource               $cl10           i3wm.color10
set_from_resource               $cl11           i3wm.color11
set_from_resource               $cl12           i3wm.color12
set_from_resource               $cl13           i3wm.color13
set_from_resource               $cl14           i3wm.color14
set_from_resource               $cl15           i3wm.color15
set_from_resource               $cl16           i3wm.color16
set_from_resource               $cl17           i3wm.color17
set_from_resource               $cl18           i3wm.color18
set_from_resource               $cl19           i3wm.color19
set_from_resource               $cl20           i3wm.color20
set_from_resource               $cl21           i3wm.color21

client.focused                  $cl7            $bg             $fg             $fg             $cl7
client.focused_inactive         $cl0            $bg             $fg             $bg             $bg
client.unfocused                $cl0            $bg             $fg             $bg             $bg
client.urgent                   $cl13           $bg             $cl13           $bg             $cl13
client.placeholder              $bg             $bg             $fg             $bg             $fg
client.background               $bg


