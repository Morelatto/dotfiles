bindsym $mod+Shift+c reload
bindsym $mod+Shift+r restart
bindsym $mod+Shift+e exec --no-startup-id "i3-nagbar -t warning -m 'You pressed the exit shortcut. Do you really want to exit i3? This will end your X session.' -b 'Yes, exit i3' 'i3-msg exit'"

mode "  " {
        bindsym $left   resize shrink width 10 px or 10 ppt
        bindsym $down   resize grow height 10 px or 10 ppt
        bindsym $up     resize shrink height 10 px or 10 ppt
        bindsym $right  resize grow width 10 px or 10 ppt

        bindsym Left resize shrink width 10 px or 10 ppt
        bindsym Down resize grow height 10 px or 10 ppt
        bindsym Up resize shrink height 10 px or 10 ppt
        bindsym Right resize grow width 10 px or 10 ppt

        bindsym Return mode "default"
        bindsym Escape mode "default"
        bindsym $mod+r mode "default"
}

bindsym $mod+r mode "  "

# colors from Xresources
set_from_resource $fg i3wm.foreground
set_from_resource $bg i3wm.background
set_from_resource $cl0 i3wm.color0
set_from_resource $cl1 i3wm.color1
set_from_resource $cl2 i3wm.color2
set_from_resource $cl3 i3wm.color3
set_from_resource $cl4 i3wm.color4
set_from_resource $cl5 i3wm.color5
set_from_resource $cl6 i3wm.color6
set_from_resource $cl7 i3wm.color7
set_from_resource $cl8 i3wm.color8
set_from_resource $cl9 i3wm.color9
set_from_resource $cl10 i3wm.color10
set_from_resource $cl11 i3wm.color11
set_from_resource $cl12 i3wm.color12
set_from_resource $cl13 i3wm.color13
set_from_resource $cl14 i3wm.color14
set_from_resource $cl15 i3wm.color15
set_from_resource $cl16 i3wm.color16
set_from_resource $cl17 i3wm.color17
set_from_resource $cl18 i3wm.color18
set_from_resource $cl19 i3wm.color19
set_from_resource $cl20 i3wm.color20
set_from_resource $cl21 i3wm.color21

# class                 border  backgr. text   indicator child_border
client.focused          $cl7    $bg     $fg    $fg       $cl7
client.focused_inactive $cl0    $bg     $fg    $bg       $bg
client.unfocused        $cl0    $bg     $fg    $bg       $bg
client.urgent           $cl13   $bg     $cl13  $bg       $cl13
client.placeholder      $bg     $bg     $fg    $bg       $fg
client.background       $bg

bar {
        font                    pango:Inconsolata 11
        position                top
        tray_output             primary
        tray_padding            2
        bindsym button4         nop
        bindsym button5         nop
        status_command          bumblebee-status
        colors {
                background  $bg
                statusline  $fg
                # class             border  backgr. text
                focused_workspace   $cl19 $cl7 $cl19
                active_workspace    $cl18 $cl18 $cl15
                inactive_workspace  $cl18 $cl18 $cl20
                urgent_workspace    $cl19 $cl5 $cl15
                binding_mode        $cl18 $cl3 $cl2
            }
}

# i3-gaps
gaps inner 10
gaps outer 10

# removes title from windows
for_window [class="^.*"] border pixel 1

# back and forth
#bindsym $mod+Tab workspace back_and_forth
#bindsym $mod+n workspace next
#bindsym $mod+p workspace prev

# lock screen
# bindsym Control+$mod+l exec --no-startup-id ~/.config/i3/lock.sh

# screenshots
bindsym --release Shift+Print exec --no-startup-id "maim -s | tee ~/Pictures/$(date +%F_%H-%M-%S)-Screenshot.png | xclip -selection clipboard -t image/png"
bindsym --release Print exec --no-startup-id "maim | tee ~/Pictures/$(date +%F_%H-%M-%S)-Screenshot.png | xclip -selection clipboard -t image/png"
bindsym --release Ctrl+Print exec --no-startup-id "maim -i $(xdotool getactivewindow) | tee ~/Pictures/$(date +%F_%H-%M-%S)-Screenshot.png | xclip -selection clipboard -t image/png"

# volume keys
bindsym XF86AudioMute "exec --no-startup-id barify vol mute"
bindsym XF86AudioRaiseVolume "exec --no-startup-id barify vol up"
bindsym XF86AudioLowerVolume "exec --no-startup-id barify vol down"

# media control
bindsym XF86AudioNext "exec --no-startup-id playerctl next"
bindsym XF86AudioPrev "exec --no-startup-id playerctl previous"
bindsym XF86AudioPlay "exec --no-startup-id playerctl play-pause"
bindsym XF86AudioStop "exec --no-startup-id playerctl stop"

# auto start
exec_always --no-startup-id killall dunst; dunst -lf "$fg" -nf "$fg" -cf "$fg" -lb "$bg" -nb "$bg" -cb "$bg" -lfr "$lw" -nfr "$cl10" -cfr "$cl13"

exec --no-startup-id nm-applet --sm-disable
exec --no-startup-id picom --experimental-backends -b