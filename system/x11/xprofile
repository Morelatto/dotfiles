#!/bin/sh
# X11 session configuration

# Disable system beep
xset -b

# Screen saver timeout for lock screen (30 minutes)
# DPMS is configured in xorg.conf.d/50-dpms.conf
xset s 1800

# Set GTK theme
export GTK_THEME=Arc-Dark

# Keyboard repeat rate (optional, adjust as needed)
# xset r rate 300 50

# Mouse acceleration (optional, adjust as needed)
# xset m 2 1