#!/bin/sh
# X11 session configuration

# Disable system beep
xset -b

# Screen timeout managed by xss-lock
# Screen saver: 30 minutes (1800s) before lock
# DPMS: 40 minutes (2400s) standby/suspend/off
xset s 1800
xset dpms 2400 2400 2400

# Set GTK theme
export GTK_THEME=Arc-Dark

# Keyboard repeat rate (optional, adjust as needed)
# xset r rate 300 50

# Mouse acceleration (optional, adjust as needed)
# xset m 2 1