    Option      "Position" "0 0"
    Option      "Primary" "true"
    DisplaySize 531 298
EndSection

Section "Monitor"
    Identifier  "HDMI-0"
    Option      "DPMS" "false"
    Option      "PreferredMode" "1920x1080"
    Option      "Position" "1920 0"
    DisplaySize 510 290
EndSection

