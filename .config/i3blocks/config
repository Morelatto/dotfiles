# Simple working i3blocks config

[time]
command=date '+%Y-%m-%d %H:%M:%S'
interval=1
color=#f3f4f5

[load_average]
command=uptime | grep -ohe 'up .*' | sed 's/,//g' | awk '{ print $2 }'
interval=10
color=#50fa7b

[disk]
command=df -h /home | awk 'FNR==2{print $4}'
interval=30
color=#bd93f9

[memory]
command=free -h | awk 'FNR==2{print $3}'
interval=30
color=#ff5555
EOF < /dev/null
