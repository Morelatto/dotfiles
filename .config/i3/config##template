# i3 config file - YADM template version
# This replaces the build process with native yadm templating
# vim: filetype=i3config

# Base mod key
set $mod Mod4

# Terminal
set $terminal alacritty

# Machine-specific wallpaper
{% if yadm.hostname == "storm-desktop" %}
set $wallpaper /home/storm/Pictures/445f6909-d89b-434c-920c-8768c717ac35.png
{% elif yadm.hostname == "storm-laptop" %}
set $wallpaper /home/storm/Pictures/laptop-wallpaper.png
{% else %}
set $wallpaper /usr/share/endeavouros/backgrounds/endeavouros-wallpaper.png
{% endif %}

# Font for window titles
font pango: Noto Sans Regular 10

# Use Mouse+$mod to drag floating windows
floating_modifier $mod

# Start a terminal
bindsym $mod+Return exec $terminal

# Kill focused window
bindsym $mod+q kill

# Start rofi
bindsym $mod+d exec --no-startup-id rofi -modi drun -show drun -config ~/.config/rofi/rofidmenu.rasi
bindsym $mod+t exec --no-startup-id rofi -show window -config ~/.config/rofi/rofidmenu.rasi

# Change focus
bindsym $mod+j focus left
bindsym $mod+k focus down
bindsym $mod+b focus up
bindsym $mod+o focus right

# Alternatively, you can use the cursor keys:
bindsym $mod+Left focus left
bindsym $mod+Down focus down
bindsym $mod+Up focus up
bindsym $mod+Right focus right

# Move focused window
bindsym $mod+Shift+j move left
bindsym $mod+Shift+k move down
bindsym $mod+Shift+b move up
bindsym $mod+Shift+o move right

# Alternatively, you can use the cursor keys:
bindsym $mod+Shift+Left move left
bindsym $mod+Shift+Down move down
bindsym $mod+Shift+Up move up
bindsym $mod+Shift+Right move right

# Split orientation
bindsym $mod+h split h
bindsym $mod+v split v

# Custom: Toggle split direction
bindsym $mod+equal exec --no-startup-id i3-msg '[workspace="__focused__"] split toggle'

# Enter fullscreen mode
bindsym $mod+f fullscreen toggle

# Layout shortcuts (custom)
bindsym $mod+Shift+q layout toggle split
bindsym $mod+Shift+w layout tabbed
bindsym $mod+Shift+a layout stacking

# Original layout bindings
bindsym $mod+s layout stacking
bindsym $mod+g layout tabbed
bindsym $mod+e layout toggle split

# Toggle floating
bindsym $mod+Shift+space floating toggle
bindsym $mod+space focus mode_toggle

# Focus parent/child
bindsym $mod+a focus parent
bindsym $mod+Shift+d focus child

# Scratchpad (custom bindings)
bindsym $mod+Shift+minus move scratchpad
bindsym $mod+minus scratchpad show

# Workspace definitions
set $ws1 "1:"
set $ws2 "2:"
set $ws3 "3:"
set $ws4 "4:"
set $ws5 "5"
set $ws6 "6"
set $ws7 "7"
set $ws8 "8"
set $ws9 "9"
set $ws10 "10"

# Switch to workspace
bindsym $mod+1 workspace number $ws1
bindsym $mod+2 workspace number $ws2
bindsym $mod+3 workspace number $ws3
bindsym $mod+4 workspace number $ws4
bindsym $mod+5 workspace number $ws5
bindsym $mod+6 workspace number $ws6
bindsym $mod+7 workspace number $ws7
bindsym $mod+8 workspace number $ws8
bindsym $mod+9 workspace number $ws9
bindsym $mod+0 workspace number $ws10

# Move to workspace
bindsym $mod+Shift+1 move container to workspace number $ws1
bindsym $mod+Shift+2 move container to workspace number $ws2
bindsym $mod+Shift+3 move container to workspace number $ws3
bindsym $mod+Shift+4 move container to workspace number $ws4
bindsym $mod+Shift+5 move container to workspace number $ws5
bindsym $mod+Shift+6 move container to workspace number $ws6
bindsym $mod+Shift+7 move container to workspace number $ws7
bindsym $mod+Shift+8 move container to workspace number $ws8
bindsym $mod+Shift+9 move container to workspace number $ws9
bindsym $mod+Shift+0 move container to workspace number $ws10

# Move to next/prev workspace
bindsym $mod+Tab workspace next
bindsym $mod+Shift+Tab workspace prev

# Resize mode
mode "resize" {
    bindsym j resize shrink width 10 px or 10 ppt
    bindsym k resize grow height 10 px or 10 ppt
    bindsym b resize shrink height 10 px or 10 ppt
    bindsym o resize grow width 10 px or 10 ppt

    bindsym Left resize shrink width 10 px or 10 ppt
    bindsym Down resize grow height 10 px or 10 ppt
    bindsym Up resize shrink height 10 px or 10 ppt
    bindsym Right resize grow width 10 px or 10 ppt

    bindsym Return mode "default"
    bindsym Escape mode "default"
    bindsym $mod+r mode "default"
}
bindsym $mod+r mode "resize"

# Reload/restart i3
bindsym $mod+Shift+c reload
bindsym $mod+Shift+r restart

# Exit menu
bindsym $mod+Shift+e exec --no-startup-id archlinux-logout

# Lock screen
bindsym $mod+l exec --no-startup-id betterlockscreen -l

# Screenshot bindings (custom paths)
bindsym Print exec --no-startup-id scrot ~/Pictures/%Y-%m-%d-%T-screenshot.png && notify-send "Screenshot saved"
bindsym Shift+Print exec --no-startup-id scrot -s ~/Pictures/%Y-%m-%d-%T-screenshot.png && notify-send "Selection screenshot saved"

# Caffeine toggle (custom)
bindsym $mod+F12 exec --no-startup-id caffeine-x11 toggle

# Media keys
bindsym XF86AudioRaiseVolume exec --no-startup-id pactl set-sink-volume @DEFAULT_SINK@ +5%
bindsym XF86AudioLowerVolume exec --no-startup-id pactl set-sink-volume @DEFAULT_SINK@ -5%
bindsym XF86AudioMute exec --no-startup-id pactl set-sink-mute @DEFAULT_SINK@ toggle
bindsym XF86AudioMicMute exec --no-startup-id pactl set-source-mute @DEFAULT_SOURCE@ toggle

# Brightness controls (laptop specific)
{% if yadm.class == "Laptop" %}
bindsym XF86MonBrightnessUp exec --no-startup-id brightnessctl set +10%
bindsym XF86MonBrightnessDown exec --no-startup-id brightnessctl set 10%-
{% endif %}

# Window rules
for_window [title="smart_screenshot"] floating enable
for_window [title="LLM Overlay"] floating enable border pixel 0
for_window [title="LLM Overlay"] move position center
for_window [title="LLM Overlay"] opacity 0.9

# Floating windows
for_window [window_role="pop-up"] floating enable
for_window [window_role="task_dialog"] floating enable
for_window [class="Pavucontrol"] floating enable
for_window [class="Bluetooth-sendto"] floating enable
for_window [class="Pamac-manager"] floating enable

# Colors (Nord theme)
# class                 border  bground text    indicator child_border
client.focused          #81A1C1 #81A1C1 #2E3440 #81A1C1   #81A1C1
client.focused_inactive #4C566A #4C566A #ECEFF4 #4C566A   #4C566A
client.unfocused        #3B4252 #3B4252 #D8DEE9 #3B4252   #3B4252
client.urgent           #BF616A #BF616A #2E3440 #BF616A   #BF616A
client.placeholder      #2E3440 #2E3440 #D8DEE9 #2E3440   #2E3440
client.background       #2E3440

# Borders
default_border pixel 2
default_floating_border pixel 2

# Gaps
gaps inner 6
gaps outer 3

# Only enable gaps on a workspace when there is at least one container
smart_gaps on

# Autostart applications
exec --no-startup-id /usr/lib/polkit-gnome/polkit-gnome-authentication-agent-1
exec --no-startup-id dex --autostart --environment i3
exec --no-startup-id xss-lock --transfer-sleep-lock -- betterlockscreen -l
exec --no-startup-id nm-applet
exec --no-startup-id pamac-tray
exec --no-startup-id blueman-applet
exec --no-startup-id picom -b
exec --no-startup-id dunst

# Wallpaper
exec --no-startup-id feh --bg-fill $wallpaper

# Autotiling
exec_always --no-startup-id autotiling

# Polybar
exec_always --no-startup-id ~/.config/polybar/launch.sh

# Machine-specific autostart
{% if yadm.hostname == "storm-desktop" %}
exec --no-startup-id sleep 2 && i3-msg workspace $ws1 && pycharm
exec --no-startup-id sleep 7 && i3-msg workspace $ws2 && firefox
{% elif yadm.hostname == "storm-laptop" %}
exec --no-startup-id sleep 2 && i3-msg workspace $ws2 && firefox
{% endif %}

# Bar configuration (using polybar instead)
bar {
    mode invisible
}