#!/bin/bash

# Terminate already running bar instances
killall -q polybar

# Wait until the processes have been shut down
while pgrep -u $UID -x polybar >/dev/null; do sleep 1; done

# Launch Polybar
{% if yadm.class == "Desktop" %}
# Desktop: Support for multiple monitors
if type "xrandr"; then
  for m in $(xrandr --query | grep " connected" | cut -d" " -f1); do
    MONITOR=$m polybar --reload Polybar1 2>&1 | tee -a /tmp/polybar.log & disown
  done
else
  polybar --reload Polybar1 2>&1 | tee -a /tmp/polybar.log & disown
fi
{% else %}
# Laptop/Default: Single monitor
polybar --reload Polybar1 2>&1 | tee -a /tmp/polybar.log & disown
{% endif %}

echo "Polybar launched..."