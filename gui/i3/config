bindsym $mod+Control+Shift+8 move container to workspace 18
bindsym $mod+Control+Shift+9 move container to workspace 19
bindsym $mod+Control+Shift+0 move container to workspace 20

# WINDOW MANAGEMENT
bindsym $mod+Return exec --no-startup-id xfce4-terminal
bindsym $mod+q kill
bindsym $mod+Shift+e exec --no-startup-id ~/.config/i3/scripts/powermenu
bindsym $mod+l exec --no-startup-id betterlockscreen -l
exec --no-startup-id xss-lock -l -- betterlockscreen -l
bindsym $mod+Shift+c reload
bindsym $mod+Shift+r restart
bindsym F1 exec --no-startup-id ~/.config/i3/scripts/keyhint-2

# FOCUS AND MOVEMENT
bindsym $mod+j focus left
bindsym $mod+k focus down
bindsym $mod+b focus up
bindsym $mod+o focus right
bindsym $mod+Left focus left
bindsym $mod+Down focus down
bindsym $mod+Up focus up
bindsym $mod+Right focus right

bindsym $mod+Shift+j move left
bindsym $mod+Shift+k move down
bindsym $mod+Shift+b move up
bindsym $mod+Shift+o move right
bindsym $mod+Shift+Left move left
bindsym $mod+Shift+Down move down
bindsym $mod+Shift+Up move up
bindsym $mod+Shift+Right move right

# LAYOUT
bindsym $mod+h split h
bindsym $mod+v split v
bindsym $mod+f fullscreen toggle
bindsym $mod+s layout stacking
bindsym $mod+y layout tabbed
bindsym $mod+e layout toggle split
bindsym $mod+Shift+space floating toggle
bindsym $mod+space focus mode_toggle
bindsym $mod+a focus parent
bindsym $mod+Shift+n exec --no-startup-id ~/.config/i3/scripts/empty_workspace
bindsym $mod+equal exec --no-startup-id i3-msg '[workspace="__focused__"] split toggle'
bindsym $mod+Shift+q layout toggle split
bindsym $mod+Shift+w layout tabbed
bindsym $mod+Shift+a layout stacking

# SCRATCHPAD
bindsym $mod+Shift+minus move scratchpad
bindsym $mod+minus scratchpad show

# BRIGHTNESS
bindsym XF86MonBrightnessUp exec --no-startup-id ~/.config/i3/scripts/volume_brightness.sh brightness_up
bindsym XF86MonBrightnessDown exec --no-startup-id ~/.config/i3/scripts/volume_brightness.sh brightness_down

# AUDIO
bindsym XF86AudioRaiseVolume exec --no-startup-id ~/.config/i3/scripts/volume_brightness.sh volume_up
bindsym XF86AudioLowerVolume exec --no-startup-id ~/.config/i3/scripts/volume_brightness.sh volume_down
bindsym $mod+XF86AudioRaiseVolume exec --no-startup-id amixer -D pulse sset Master 1%+ && pkill -RTMIN+1 i3blocks
bindsym $mod+XF86AudioLowerVolume exec --no-startup-id amixer -D pulse sset Master 1%- && pkill -RTMIN+1 i3blocks
bindsym XF86AudioMute exec --no-startup-id ~/.config/i3/scripts/volume_brightness.sh volume_mute
bindsym XF86AudioMicMute exec amixer sset Capture toggle
bindsym XF86AudioPlay exec --no-startup-id playerctl play-pause
bindsym XF86AudioNext exec --no-startup-id playerctl next
bindsym XF86AudioPrev exec --no-startup-id playerctl previous
bindsym $mod+p exec --no-startup-id ~/.config/i3/scripts/audio-device-switch

# APPLICATIONS
bindsym $mod+n exec --no-startup-id /usr/bin/thunar
bindsym $mod+Shift+f exec --no-startup-id /usr/bin/firefox
bindsym Print exec --no-startup-id ~/.config/i3/scripts/screenshot full
bindsym Shift+Print exec --no-startup-id ~/.config/i3/scripts/screenshot select
bindsym $mod+Print exec --no-startup-id ~/.config/i3/scripts/screenshot window
bindsym Ctrl+Print exec --no-startup-id ~/.config/i3/scripts/screenshot clipboard
bindsym --whole-window Ctrl+button2 exec --no-startup-id ~/.config/i3/scripts/screenshot window-clipboard
bindsym $mod+Shift+p exec --no-startup-id ~/.config/i3/scripts/power-profiles
bindsym $mod+F12 exec --no-startup-id BLOCK_BUTTON=1 ~/.config/i3/scripts/caffeine

# ROFI
bindsym $mod+d exec --no-startup-id rofi -modi drun -show drun -config ~/.config/rofi/rofidmenu.rasi
bindsym $mod+t exec --no-startup-id rofi -show window -config ~/.config/rofi/rofidmenu.rasi

# WORKSPACE GROUPS
exec_always --no-startup-id pkill i3-workspace-groups; i3-workspace-groups
exec_always --no-startup-id pkill i3wsr; sleep 1; i3wsr --config ~/.config/i3wsr/config.toml --no-names --remove-duplicates &
bindsym $mod+g exec --no-startup-id i3-workspace-groups list-groups | rofi -dmenu -i -p "Switch to group" -config ~/.config/rofi/rofidmenu.rasi | xargs -r i3-workspace-groups switch-group
bindsym $mod+Shift+g exec --no-startup-id rofi -dmenu -p "New group name" -config ~/.config/rofi/rofidmenu.rasi | xargs -r i3-workspace-groups create-group
bindsym $mod+Control+g exec --no-startup-id i3-workspace-groups list-groups | rofi -dmenu -i -p "Assign workspace to group" -config ~/.config/rofi/rofidmenu.rasi | xargs -r i3-workspace-groups assign-workspace
bindsym $mod+w exec --no-startup-id ~/.config/i3/scripts/workspace-switcher
bindsym $mod+comma exec --no-startup-id i3-input -F 'rename workspace to "%s"' -P 'New name for this workspace: '


# MOVE WINDOW MODE
mode "move_window" {
    bindsym 1 move container to workspace 21; mode "default"
    bindsym 2 move container to workspace 22; mode "default"
    bindsym 3 move container to workspace 23; mode "default"
    bindsym 4 move container to workspace 24; mode "default"
    bindsym 5 move container to workspace 25; mode "default"
    bindsym 6 move container to workspace 26; mode "default"
    bindsym 7 move container to workspace 27; mode "default"
    bindsym 8 move container to workspace 28; mode "default"
    bindsym 9 move container to workspace 29; mode "default"
    bindsym 0 move container to workspace 30; mode "default"
    bindsym Return mode "default"
    bindsym Escape mode "default"
    bindsym $mod+m mode "default"
}
bindsym $mod+m mode "move_window"

# WORKSPACE ASSIGNMENTS
assign [class="Thunar"] number 3
assign [class="thunderbird"] number 4
assign [class="TelegramDesktop"] number 5

# WINDOW FOCUS RULES
for_window [class=Xfce4-terminal] focus
for_window [class=(?i)firefox] focus
for_window [class=Thunar] focus
for_window [class=Thunderbird] focus
for_window [class=TelegramDesktop] focus

# FLOATING RULES
for_window [class="Yad" instance="yad"] floating enable
for_window [class="Galculator" instance="galculator"] floating enable
for_window [class="Blueberry.py" instance="blueberry.py"] floating enable
for_window [class="Xsane" instance="xsane"] floating enable
for_window [class="Pavucontrol" instance="pavucontrol"] floating enable
for_window [class="qt5ct" instance="qt5ct"] floating enable
for_window [class="Bluetooth-sendto" instance="bluetooth-sendto"] floating enable
for_window [class="Pamac-manager"] floating enable
for_window [window_role="About"] floating enable
for_window [class="Yad" title="Calendar"] floating enable, move position 1600 px 35 px
for_window [class="Gsimplecal"] floating enable
for_window [class="urxvt"] border pixel 1

# AUTOSTART
exec --no-startup-id pgrep -x picom || picom -b
exec --no-startup-id dex --autostart --environment i3
exec --no-startup-id /usr/lib/polkit-gnome/polkit-gnome-authentication-agent-1
exec --no-startup-id dunst
exec_always --no-startup-id autotiling
exec --no-startup-id ~/.screenlayout/monitor.sh
exec --no-startup-id sleep 1 && feh --bg-fill ~/.config/wallpapers/default.png

# BAR
bar {
		font pango: Noto Sans Regular 10, FontAwesome 10
		height 25
		status_command ~/.config/i3/scripts/i3blocks-wrapper.sh
	    	position bottom
		bindsym button4 nop
		bindsym button5 nop
		    tray_padding 0
strip_workspace_numbers no
		    colors {
		    separator          $purple
		    background         $darkgrey
		    statusline         $white
		focused_workspace	$mediumgrey	   	$grey		$darkgrey	$purple
		active_workspace	$lightblue      	$mediumgrey	$darkgrey	$purple
		inactive_workspace	$darkgrey   		$darkgrey	$grey		$purple
		urgent_workspace	$urgentred	    	$urgentred	$white		$purple
	}
}
