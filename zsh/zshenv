export XDG_CONFIG_HOME="$HOME/.config"
export XDG_CACHE_HOME="$HOME/.cache"

export ZDOTDIR="$XDG_CONFIG_HOME/zsh"
export ZSH_CACHE="$XDG_CACHE_HOME/zsh" 
export ZFUNCTIONS="$ZDOTDIR/functions"
export ZALIASES="$ZDOTDIR/aliases"

export ADOTDIR="$ZDOTDIR/antigen"
typeset -a ANTIGEN_CHECK_FILES
ANTIGEN_CHECK_FILES=($ZDOTDIR/.zshrc $ADOTDIR/antigen.zsh)

export VISUAL="vim"
export EDITOR="$VISUAL"

export MOZ_PATH="$HOME/.mozilla/firefox/"
export BROWSER="firefox"

export PIP_PATH="$HOME/.local/bin"
export RUST_PATH="$HOME/.cargo/bin"

typeset -U path
path=($path[@] $PIP_PATH $RUST_PATH)
