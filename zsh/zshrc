typeset -ga sources
sources+="$ZDOTDIR/options.zsh"
sources+="$ZDOTDIR/prompt.zsh"
sources+="$ZDOTDIR/aliases.zsh"
sources+="$ZDOTDIR/keybindings.zsh"
sources+="$ZFUNCTIONS/zsh-syntax-highlighting.zsh" 
sources+="$ZDOTDIR/completions.zsh"
sources+="$ZDOTDIR/vi-mode.zsh"
sources+="$ZDOTDIR/prompt.zsh"

foreach file (`echo $sources`)
    if [[ -a $file ]]; then
        source $file
    fi
end

fpath=( $ZFUNCTIONS $fpath )
