#!/bin/sh
# Display configuration template
# Auto-configured based on hostname/environment

{% if yadm.hostname == "storm-desktop" %}
# Desktop dual monitor setup (1920x1080 each)
xrandr --output DP-0 --off --output DP-1 --off --output HDMI-0 --mode 1920x1080 --pos 1920x0 --rotate normal --output DP-2 --mode 1920x1080 --pos 0x0 --rotate normal --output DP-3 --off --output DP-4 --off --output DP-5 --off
{% elif yadm.hostname == "storm-laptop" %}
# Laptop single screen
xrandr --output eDP-1 --mode 1920x1080 --pos 0x0 --rotate normal
{% else %}
# Default single monitor fallback
xrandr --auto
{% endif %}